<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include('components/header') %>
    <h1><%= title %></h1>
    <form action="/books/update/<%=book.id%>" enctype="multipart/form-data" method="post">
      <!-- <input type="hidden" name="id" value="<%=book.id%>"> -->

      <label>Book title<input type="text" name="title" value="<%=book.title%>">
      </label>
      <br>
      <label>
        book production year
        <input type="text" name="year" value="<%=book.year%>">
      </label>
      <br>
      <label>
        Book Author
        <select name="author" value="<%=book.author%>">
          <%for(author of authorsList){ %>
            <option value="<%=author.surname%>"><%=author.surname%></option>
          <%}%>
        </select>
      </label>
      <br>
      <label>
        Genre 
        <input type="text" name="genre" value="<%=book.genre%>">
      </label>
      <br>
      <label>
        Description 
        <textarea name="description" cols="50" rows="10"><%=book.description%></textarea>
      </label>
      <br>
      <div><img src="/uploads/<%=book.img%>" alt="" class="image-icon-books"></div>
      <br>
      <label>
        Img 
        <input type="file" name="img" multiple value="<%=book.img%>">
      </label>

      <br>
      <input type="submit" value="Надіслати">
  </form>
  
  </body>
</html>
